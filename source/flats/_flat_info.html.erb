
<div class="col-xs-12 col-sm-10 col-sm-offset-1">
  <h2>About this flat</h2>
  <p><%= flat.detailed_description %></p>
  <hr>
  <div class="row" id="flat-data">
    <div class="col-xs-12 col-sm-2">
      The Space
    </div>
    <div class="col-xs-12 col-sm-4">
      <ul class="list-unstyled">
        <li>Accommodates: <strong><%= flat.accomodates %></strong></li>
        <li>Bathrooms: <strong><%= flat.bathrooms %></strong></li>
      </ul>
    </div>
    <div class="col-xs-12 col-sm-4">
      <ul class="list-unstyled">
        <li>Bed type:  <strong><%= flat.bed_type %></strong></li>
      </ul>
    </div>
  </div>
  <hr>
  <div class="row" id="flat-data">
    <div class="col-xs-12 col-sm-2">
      Amenities
    </div>
    <div class="col-xs-12 col-sm-8">
      <ul class="list-unstyled">
        <% if flat.kitchen == true %>
        <li><i class="fa fa-cutlery"></i><strong> Kitchen</strong></li>
        <% end%>
        <% if flat.wifi == true %>
        <li><i class="fa fa-wifi"></i><strong> Wifi</strong></li>
        <% end%>
        <% if flat.tv == true %>
        <li><i class="fa fa-desktop"></i><strong> TV</strong></li>
        <% end%>
      </ul>
    </div>
  </div>
</div>
