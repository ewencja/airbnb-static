<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('../images/<%=flat.picture %>'); height: 50vh; background-position: center;"></div>
<div class="header-flat">
  <div class="container">
    <div class="row">
      <%= partial "flats/owner_inf", :locals => {:flat => flat} %>
      <%= partial "flats/booking" %>
    </div>
  </div>
</div>

<div id="flat-description">
  <div class="container">
    <div class="row">
      <%= partial "flats/flat_info", :locals => {:flat => flat} %>
    </div>
  </div>
</div>
